@model OrderList

<form method="post">
<div class="container border ">
    <h2 class="text-primary">
        Edit Existing Oder List
    </h2>
        <div class="m-3">
            <label asp-for="Title" class="form-control m-3"></label>
            <input asp-for="Title" class="form-control m-3" />
            <span asp-validation-for="Title" class="m-3 text-danger"></span>
        </div>
        <div class="m-3">
            <label asp-for="Description" class="form-control m-3"></label>
            <input asp-for="Description" class="form-control m-3" />
            <span asp-validation-for="Description" class="m-3 text-danger"></span>
        </div>
        <div class="m-3">
            <label asp-for="Stock" class="form-control m-3"></label>
            <input asp-for="Stock" class="form-control m-3" />
            <span asp-validation-for="Stock" class="m-3 text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary m-3">Update</button>
        <a asp-controller="Order" asp-action="Index" class="btn btn-secondary m-3">Back to List</a>
</div>
</form>
